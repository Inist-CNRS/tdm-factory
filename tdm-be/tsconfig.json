{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "ESNext"
        ],
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "bin/swagger.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
