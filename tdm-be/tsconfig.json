{
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "Node",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "bin/swagger.ts"
    ]
}
