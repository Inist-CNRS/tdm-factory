{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "Node",
        "lib": [
            "ESNext"
        ],
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "type/**/*.ts"
    ]
}
